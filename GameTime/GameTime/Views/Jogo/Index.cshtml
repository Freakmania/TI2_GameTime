@model IEnumerable<GameTime.Models.Jogo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Admin")) { 
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Capa)*@
            @Html.DisplayName("Cover")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Nome)*@
            @Html.DisplayName("Name")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.EstadoJogo.Nome)*@
            @Html.DisplayName("Status")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Genero.Nome)*@
            @Html.DisplayName("Type")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Editora)*@
            @Html.DisplayName("Publisher")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.Capa)*@
            <a href="~/Imagens/@item.Capa" target="_blank">
                <img src="~/Imagens/@item.Capa" width="80" height="100" />
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoJogo.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero.Nome)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Editora)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @if (User.IsInRole("Admin"))
            {               
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }

            </td>
    </tr>
}

</table>
